<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSearch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_150sdp"
    android:paddingVertical="@dimen/screen_margin"
    android:layout_marginHorizontal="@dimen/screen_margin"
    android:background="@drawable/bg_solid_cr_20"
    android:paddingHorizontal="@dimen/screen_margin">


    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/font_medium"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/tertiary_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Humidity" />

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/font_medium"
        android:textSize="@dimen/subtitle_text_size"
        android:textColor="@color/txt_color_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtLabel"
        tools:text="51" />


</androidx.constraintlayout.widget.ConstraintLayout>